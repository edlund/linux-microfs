PWD := $(shell pwd)

ifndef INSTALL_PATH
INSTALL_PATH := /usr/local/bin
endif

CFLAGS += \
	-Wall \
	-Wextra \
	-pedantic \
	-std=c11 \
	-D_GNU_SOURCE \
	-D_FILE_OFFSET_BITS=64

ifdef DEBUG
CFLAGS += -ggdb
$(info DEBUG build)
endif

LDFLAGS += \
	-lrt

all: devtck devtmk frd sysdrain

devtck: devtck.c ../hostprogs.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^

devtmk: devtmk.c ../hostprogs.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^

frd: frd.c ../hostprogs.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^

sysdrain: sysdrain.c ../hostprogs.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^

clean:
	rm -f devtck
	rm -f devtmk
	rm -f frd
	rm -f sysdrain

install:
	cp $(PWD)/devtck $(INSTALL_PATH)
	cp $(PWD)/devtmk $(INSTALL_PATH)
	cp $(PWD)/frd $(INSTALL_PATH)
	cp $(PWD)/sysdrain $(INSTALL_PATH)

uninstall:
	rm $(INSTALL_PATH)/devtck 
	rm $(INSTALL_PATH)/devtmk
	rm $(INSTALL_PATH)/frd
	rm $(INSTALL_PATH)/sysdrain
